<% include partials/header %>

<div class="ui container">
  <h3 class="ui huge header"><%= blog.title %></h3>
  <h5><%= blog.created.toDateString() %></h5>
  <img src="<%= blog.image %>" alt="blog image" class="ui centered rounded image">

  <p><%= blog.body %></p>

  <a href="/blogs/<%= blog._id %>/edit" class="ui inverted orange button">Edit</a>
  <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="delete-form">
    <button class="ui inverted red button">Delete</button>
  </form>
</div>

<% include partials/footer %>
