<% include partials/header %>

<div class="ui main text container piled raised segment">
  <div class="ui huge header">Edit Blog</div>
  <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" value="<%= blog.title %>" name="blog[title]" id="title" required>
    </div>
    <div class="field">
      <label for="image">Image URL</label>
      <input type="text" value="<%= blog.image %>" name="blog[image]" id="image">
    </div>
    <div class="field">
      <label for="body">Blog content</label>
      <textarea name="blog[body]" id="body" required><%= blog.body %></textarea>
    </div>
    <button type="submit" class="ui primary button">Save changes</button>
    <button class="ui button"><a href="/blogs/<%= blog._id %>/edit">Discard changes</a></button>
  </form>
</div>

<% include partials/footer %>
