<% include partials/header %>

<div class="ui main text container piled raised segment">
  <div class="ui huge header">New Blog</div>
  <form action="/blogs" method="post" class="ui form">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" placeholder="Title" name="blog[title]" id="title" required>
    </div>
    <div class="field">
      <label for="image">Image URL</label>
      <input type="text" placeholder="Image URL" name="blog[image]" id="image">
    </div>
    <div class="field">
      <label for="body">Blog content</label>
      <textarea placeholder="Blog post" name="blog[body]" id="body" required></textarea>
    </div>
    <button type="submit" class="ui primary button">Save</button>
    <button class="ui button"><a href="/blogs/new">Discard</a></button>
  </form>
</div>

<% include partials/footer %>
